
<div id="main-content" class="card-deck">
</div>

<div class="login-form" id="">
    <form action="/users/login" enctype="application/x-www-form-urlencoded" method="POST">
        <h2 class="text-center">Log in</h2>
        <div class="form-group">
            <input type="text" class="form-control" placeholder="Username" required name="username">
        </div>
        <div class="form-group">
            <input type="password" class="form-control" placeholder="Password" required name="password">
        </div>
        <div class="form-group">
            <button type="submit" class="btn btn-primary btn-block">Log in</button>
        </div>
        <div class="clearfix">
            <label class="pull-left checkbox-inline">New user?</label>
            <a href="registration" class="pull-right">Register Now</a>
        </div>
    </form>
</div>
